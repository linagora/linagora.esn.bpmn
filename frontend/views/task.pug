.bpmn.full-width
  .row.my-task-manager#task
    .col-md-8.col-md-offset-2.task-manager-margin
      .row
        div(ng-show='hasTask')
          h2
            i.glyphicon.glyphicon-list-alt
            |  Task Manager
          table.table.table-shadow(ng-show='!isShow')
            thead.thead-default
              tr
                th Process Name
                th Task Name
                th Execute
            tbody
              tr(ng-repeat='data in bpmnFormDataList')
                td {{data.processName}}
                td {{selectTaskInformation(data.form)}}
                td
                  a(ng-click='selectForm(data);', href='', title='Open')
                    span.glyphicon.glyphicon-open
          .well.form-container(ng-show='isShow')
            legend Task Form
            form(name='activitiName', novalidate='')
              formly-form(model='activiti', fields='activitiFields')
                div.flex.flex-space-around
                  button.btn.btn-secondary(type='submit', ng-click='cancel()') Cancel
                  button.btn.btn-primary.submit-button.second-submit-button(type='submit', ng-click='onSubmit(activiti)') Submit
        div(ng-show='!hasTask')
          h2 No task to do
      ul.buttons.opacity-buttons
        li
          a(ng-click='goToEditor()', href='', title='activiti')
            span.glyphicon.glyphicon-edit
            | Editor